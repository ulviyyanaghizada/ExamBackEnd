
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<Employee>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Employees</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Img</th>
                            <th>Name</th>
                            <th>Surname</th>
                            <th>Description</th>
                            <th>TwitterLink</th>
                            <th>FacebookLink</th>
                            <th>instagramLink</th>
                            <th>LinkedinLink</th>
                            <th>Position id</th>
                            <th colspan="2">Operations</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in (Model ?? new List<Employee>()))
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td class="py-1">
                                    <img src="~/assets/img/@item.ImageUrl" alt="image" />
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Surname</td>
                                <td>@item.Description</td>
                                <td>@item.TwitterLink</td>
                                <td>@item.FacebookLink</td>
                                <td>@item.InstagramLink</td>
                                <td>@item.LinkedinLink</td>
                                <td>@item.Position.Name</td>
                                <td><a class="btn btn-danger" asp-area="Manage" asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id">Delete</a></td>
                                <td><a class="btn btn-info" asp-area="Manage" asp-controller="Employee" asp-action="Update" asp-route-id="@item.Id">Update</a></td>
                            </tr>
                        }
                    </tbody>
                    <nav aria-label="...">
                        <ul class="pagination pagination-sm">
                            @if (ViewBag.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage-1)" tabindex="-1">Previous</a>
                                </li>
                            }
                            @for (int i = 1; i <= ViewBag.MaxPageCount; i++)
                            {
                                <li class="page-item @(ViewBag.CurrentPage==i?"disabled":"")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@i" tabindex="-1">@i</a>
                                </li>
                            }
                            @if (ViewBag.CurrentPage < ViewBag.MaxPageCount)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage+1)" tabindex="-1">Next</a>
                                </li>
                            }



                        </ul>
                    </nav>
                </table>
            </div>
        </div>
    </div>
</div>


