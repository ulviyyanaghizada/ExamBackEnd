@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Manage/Views/Shared/_Layout.cshtml";
}
@model ICollection<Position>
 <div class="col-lg-6 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Basic Table</h4>
                  <p class="card-description">
                    Add class <code>.table</code>
                  </p>
                  <div class="table-responsive">
                    <table class="table">
                      <thead>
                        <tr>
                          <th>Id</th>
                          <th>Name</th>

                        </tr>
                      </thead>
                      <tbody>
                          @foreach (var item in (Model ?? new List<Position>()))
                        {
                             <tr>
                                 <td>@item.Id</td>
                          <td>@item.Name</td>
                          <td>
                                    <a class="btn btn-warning" asp-controller="Position" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                              <a class="btn btn-warning" asp-controller="Position" asp-action="Update" asp-route-id="@item.Id">Update</a>
                          </td>
                          <td><label class="badge badge-danger">Pending</label></td>
                        </tr>
                        }
                       
                      </tbody>
                    <nav aria-label="...">
                        <ul class="pagination pagination-sm">
                            @if (ViewBag.CurrentPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage-1)" tabindex="-1">Previous</a>
                                </li>
                            }
                            @for (int i = 1; i <= ViewBag.MaxPageCount; i++)
                            {
                                <li class="page-item @(ViewBag.CurrentPage==i?"disabled":"")">
                                    <a class="page-link" asp-action="Index" asp-route-page="@i" tabindex="-1">@i</a>
                                </li>
                            }
                            @if (ViewBag.CurrentPage < ViewBag.MaxPageCount)
                            {
                                <li class="page-item">
                                    <a class="page-link" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage+1)" tabindex="-1">Next</a>
                                </li>
                            }



                        </ul>
                    </nav>
                    </table>
                  </div>
                </div>
              </div>
            </div>

